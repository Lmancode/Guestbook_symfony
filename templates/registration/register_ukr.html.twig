{% extends 'base.html.twig' %}

{% block title %}Реєстрація{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="example-wrapper ml-5 m-3">
        <h1>Реєстрація</h1>
        <form method="post" action="{{ path('app_register') }}" enctype="multipart/form-data">

         {{ form_errors(registrationForm) }}
         {{ form_start(registrationForm) }}
            <div class="form-group">
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control w-25', 'placeholder': 'Емейл'}}) }}
            </div>
            <div class="form-group">
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control w-25 mt-2', 'placeholder': 'Пароль'}}) }}
            </div>
            <div class="form-group mt-3">
            {{ form_row(registrationForm.agreeTerms) }}
            </div>
            <button type="submit" class="btn btn-primary">Реєстрація</button>
            {{ form_end(registrationForm) }}
        </form>
 </div>
{% endblock %}
